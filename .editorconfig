# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.bat]
charset = latin1
end_of_line = crlf

[*.py]
indent_size = 4

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
